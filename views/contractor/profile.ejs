<% include ../partials/contractorHeader %>
<section id="Profile" class="profile_area">
    <div class="container">
        <div class="profile_header">
            <h3><a href="/contractor/<%=currentUser._id%>/profile/edit"><i class="fas fa-edit"></i></a>Profile</h3>
        </div>
        <div class=" card profile_content">
                <div class="card-body  row profile_details align-items-center">
                    <div class="col-lg-5 .d-none d-lg-block">
                        <div class="profile_image">
                            <img src="/img/default-user.jpg"  alt="Profile image">
                        </div>
                        <div class="profile_name">
                            <p><span class="font-weight-bold">User Name: </span><%= currentUser.username ;%></p>
                            <p><span class="font-weight-bold">Name: </span><%= currentUser.name ;%></p>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="profile_information">
                            <h4>Information</h4>
                            <p><span class="font-weight-bold">Email: </span><%= currentUser.email ;%></p>
                            <p><span class="font-weight-bold">Contact No.: </span><%= currentUser.mobile ;%></p>    
                            <p><span class="font-weight-bold">Number of years of experience: </span><%= currentUser.experience ;%></p>    
                            <p><span class="font-weight-bold">Date of Joining: </span><%= currentUser.dateOfJoin.toDateString() ;%></p>    
                            <% if(currentUser.budget){ %>
                                <p><span class="font-weight-bold">Minimum Budget: </span><%= currentUser.budget; %></p>    
                            <%} %>
                            <% if(currentUser.no_project){ %>
                                <p><span class="font-weight-bold">Number of Projects worked on: </span><%= currentUser.no_project; %></p>    
                            <%} %>
                            <% if(currentUser.address){ %>
                                <p><span class="font-weight-bold">Office Address: </span><%= currentUser.address; %></p>    
                            <%} %>
                            <% if(currentUser.criteria){ %>
                                <p><span class="font-weight-bold">Criteria Details: </span><%= currentUser.criteria; %></p>    
                            <%} %>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>

<% include ../partials/contractorFooter %>
