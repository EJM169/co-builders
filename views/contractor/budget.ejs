<% include ../partials/contractorHeader %>
<section id="contractor" class="plan_area">
    <div class="container">
        <%if(project==null||customer==null){%>
            <div class="jumbotron ">
                <p class="lead">Hi <%=currentUser.username%> Sorry there are no details right now, if this repeats please contact us </p>
            </div>
       <%} else{%>

        <% if(!project.budget.length){%>
            <div class="jumbotron ">
                <p class="lead">Hi please Create a Budget first </p>
            </div>
        <%} %>
        
        <div class="container">
               <h2>Budget Plan</h2> 
               <hr class="my-4">

               <!-- <div class="row">
                    <div class="col-lg-6">
                        <h3>Income</h3>
                        <hr class="my-4">  
                    </div>
                    <div class="col-lg-6">
                        <h3>Expense</h3>
                        <hr class="my-4">  
                    </div>
               </div> -->
               <!-- <% if(project.budget.length)%> -->
               <% project.budget.forEach(function(budget){%>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3">
                            <%if(budget.type==="Income"){%>
                                <h4 class="text-success">Type:<%=budget.type%></h4>
                            <%} else{%>
                                <h4 class="text-danger">Type:<%=budget.type%></h4>
                            <%}%>
                        </div><div class="col-lg-5">
                            <h4>Description:<%=budget.description%></h4>
                        </div>
                        <div class="col-lg-4">
                            <h4>Value:<%=budget.value%></h4>
                        </div>
                    </div>
                </div>
               <%})%>
        </div>

        <div class="container">
            <p class="lead">Create Budget<a id="add" href="#"><i class="far fa-plus-square"></i></a></p>
                <hr class="my-4">  
                <form action="/contractor/<%=project._id%>/budget" method="post">
                    <div class="plan">
                        <div class="plan-create">
                            <div class="form-row justify-content-md-center">
                                <div class="col-lg-4">
                                    <select class="form-control" id="inlineFormCustomSelect" name="budget[type]" >
                                        <option value="Income" selected>Income</option>
                                        <option value="Expense" >Expense</option> 
                                    </select>
                                </div> 
                                <div class="col-lg-4">
                                    <input type="text" name="budget[description]"  maxlength="65" class="form-control" placeholder="Budget  Detail" >
                                </div> 
                                <div class="col-lg-4">
                                    <input type="number" name="budget[value]"   class="form-control" >
                                </div>           
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                </form>
        </div>

        <%}%>
    </div>
</section>


<% include ../partials/contractorFooter %>
