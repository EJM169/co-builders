<% include ../partials/contractorHeader %>
<section id="projectPlan" class="plan_area">
    <div class="container">
        <%if(project==null||customer==null){%>
            <div class="jumbotron ">
                <p class="lead">Hi <%=currentUser.username%> Sorry there are no details right now </p>
            </div>
       <%} else{%>
        <div class="plan_content">
            <%if(!project.contractorStatus){%>
                <div class="jumbotron">
                    <p class="lead"><%=customer.username%></p>
                    <hr class="my-4">
                    <form action="/contractor/<%=project._id%>/plan" method="POST">
                        <div class="form-group shadow-textarea">
                            <label for="exampleFormControlTextarea6">Project Plan</label>
                            <textarea class="form-control z-depth-1" id="exampleFormControlTextarea6" rows="3" name="project[overallPlan]" placeholder="Write something here..."><%= currentUser.additionalreq %></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                        </div>
                    </form>
                </div>
            <%}else{%>
                <div class="jumbotron">
                    <p class="lead"><%=customer.username%></p>
                    <hr class="my-4">
                    <p><%=project.overallPlan%></p>
                    <div class="cont-accept">
                        <p class=" text-success"><i class="far fa-check-square"></i>Plan has been sent</p>
                    </div>
                </div>    
            <%}%>    
        </div>   
        <%}%>
    </div>
</section>