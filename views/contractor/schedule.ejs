                                    </div>
                                    <div class="col-lg-6">
                                        <p ><%=plan.plan%></p>
                                    </div>
                                    <% if(!plan.Status){%>

                                       
                                        <div class="col-lg-2">
                                        
                                            <div class="px-1 mb-1 bg-info text-white">Not Complete</div>
                                        </div>
                                    <%}else{%>
                                        <div class="col-lg-3">
                                            <div class="p-3 mb-2 bg-success text-white">.bg-success</div>

                                        </div>
                                    <%}%>
                                </div>

                        </div>
                    <%})%>
                    <a href="/contractor/<%=project._id%>/project/schedule/edit"><input type="submit" class="btn btn-primary btn-lg" value="Edit"></a>
                  
                       
                </div>    
