<% include ../partials/header %>

<!--================Sign-up form area=================-->
    <section class="contractor-signup">
        <div class="signup-form">
            <form action="/contractor-signup" method="post">
                <h2>Contractor Sign Up</h2>
                <p>Please fill in this form to create an account!</p>
                <hr>
                <div class="form-group">
                    <input type="text" class="form-control" name="username" pattern="[A-Z a-z]{3,30}" minlength="3" placeholder="Enter your Name" required="required" onkeypress="return (event.charCode > 64 && event.charCode < 91) || (event.charCode > 96 && event.charCode < 123)">
                </div>   
                    
                <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Enter your Email" required="required">
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" name="mobile" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" placeholder="Mobile No." required="required">
                </div>
                <div class="form-group">
                        <input type="text" class="form-control" minlength="4" name="conid" placeholder="Contractor id" required="required">
                </div> 
                <div class="form-group">
                        <input type="number" class="form-control" name="experience" placeholder="Years of Experience" required="required">
                </div>  
                <div class="form-group">
                    <input type="password" class="form-control" id="cont_pass1" name="password" minlength="8" placeholder="Enter your Password" required="required">
                </div> 
                <div class="form-group">
                    <input type="password" class="form-control" id="cont_pass2" name="repassword"  placeholder=" Re-enter your password">
                </div> 
                <p id="pass_match2"> Password doesn't match</p>
                <div class="form-group">
                    <label class="checkbox-inline"><input type="checkbox" required="required"> I accept the <a href="#">Terms of Use</a> &amp; <a href="#">Privacy Policy</a></label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                </div>
                <div class="hint-text">Already have an account? <a href="/#contractor">Login here</a></div>
    
           </form>
        </div> 
    </section>
    
    <% include ../partials/footer %>
