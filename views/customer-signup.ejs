<% include ./partials/header %>

<!--================Sign-up form area=================-->
    <section class="customer-signup">
        <div class="signup-form">
            <form action="/customer-signup" method="post">
                <h2>Customer Sign Up</h2>
                <p>Please fill in this form to create an account!</p>
                <hr>
                <div class="form-group">
                    <input type="text" class="form-control" name="username" pattern="[A-Za-z]{3,30}"  placeholder="Name" required="required" >
                </div>   
                    
                <div class="form-group">
                        <input type="email" class="form-control" name="email" pattern="[a-z A-Z 0-9 ^@_]{3,30}" placeholder="Email" required="required">
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" name="mobile" pattern="[1-9]{3}[0-9]{3}[0-9]{4}" placeholder="Mobile No." required="required">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" pattern="{8,20}" placeholder="Password" required="required">
                </div> 
                <div class="form-group">
                    <label class="checkbox-inline"><input type="checkbox" required="required"> I accept the <a href="#">Terms of Use</a> &amp; <a href="#">Privacy Policy</a></label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                </div>
                <div class="hint-text">Already have an account? <a href="/#customer">Login here</a></div>
    
           </form>
        </div> 
    </section>

    <% include ./partials/footer %>
