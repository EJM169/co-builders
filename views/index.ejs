<!--================Customer Area Start=============-->
<section id="customer" class="customer-area area-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-7">
                <div class="customer-content">
                    <h4>ARE YOU NEW HERE?, MAKE YOUR DREAM HOUSE COME TRUE</h4>
                    <p>Start today by logging in to your acccount and finding a contractor that fits your budget. If you're new here don't worry you can register now itself and use our service.</p>
                </div>
            </div>
             <div class="col-lg-6 col-md-6">
                <div class="customer-login">
                    <div class="modal-dialog modal-login">
                        <div class="modal-content">
                            <div class="modal-header">				
                                <h4 class="modal-title">Customer Login</h4>
                            </div>
                            <div class="modal-body">
                                <form action="/customer-login" method="post">
                                    <div class="form-group">
                                        <i class="fa fa-user"></i>
                                        <input type="text" class="form-control" placeholder="User email/username" name="username" required="required">
                                    </div>
                                    <div class="form-group">
                                        <i class="fa fa-lock"></i>
                                        <input type="password" class="form-control" placeholder="Password" minlength="8" name="password" required="required">					
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Login">
                                    </div>
                                    <div class="hint-text">Don't have an account? <a href="/customer-signup">Sign Up Today</a></div>
            
                                </form>				
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<!--===============Customer Area Ends================-->
<!--================Contractor Area Start=============-->
