<% include ./partials/customerHeader %>
<section id="project" class="project_edit_area"> 


    <div class="container">
        <div class="edit_header">
            <h3><i class="fas fa-user-edit"></i> Edit Project Requirements</h3>
        </div>
            <form action="/customer/<%=currentUser._id%>/project?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Location of construction site</label>
                       <textarea class="form-control" name="customer[location]" rows="5" minlength="20" maxlength="1000"  ><%= currentUser.location %></textarea>
                </div>
                   
                <div class="form-row align-items-center">
                     <div class="col-auto my-1">
                    <label  for="inlineFormCustomSelect">Budget for the construction</label>
                    
                    <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="customer[budget]" >
                        <option value="5,00,000 to 10,00,000" n>5,00,000 to 10,00,000</option>
                        <option value="10,00,000 to 20,00,000">10,00,000 to 20,00,000</option>
                        <option value="20,00,000 to 30,00,000">20,00,000 to 30,00,000</option>
                        <option value="30,00,000+">30,00,000+</option>
                    </select>
                    </div>
                </div>
                <div class="form-group">
                    <label>Total Area in square feets</label>
                    <input type="text" class="form-control" name="customer[area]" value="<%=currentUser.area%>">
                </div>
                  
                <div class="form-group">
                    <label>Give a description about your project</label>
                    <textarea class="form-control" name="customer[requirements]" rows="5" minlength="20" maxlength="100"  ><%= currentUser.requirements %></textarea>
                </div>
                <div class="form-row align-items-center">
                    <div class="col-auto my-1">
                   <label  for="inlineFormCustomSelect">Requirements</label>
                   
                   <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="customer[reqselect]" >
                       <option value="1-BHK" >1-BHK</option>
                       <option value="2-BHK">2-BHK</option>
                       <option value="3-BHK">3-BHK</option>
                   </select>
                   </div>
               </div>
           
                <div class=bedroomreqgroup>
                <label>Bed Room</label>
                 <select class="bedroom#requirement" id="bedroomid" name="customer[bedroomreq]">
                 <option value="1">1</option>
                 <option value="2">2</option>
                 <option value="3">3</option>
                 <option value="4">4</option>
                 <option value="4+">4+</option>
                 </select> 
                </div>
                <div class="hallreqgroup">
                <label>Hall</label>
                <select class="hall#requirement" id="hallid" name="customer[hallreq]">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="4+">4+</option>
                </select>
                </div>
                <div class="kitchenreqgroup">
                <label>Kitchen</label>
                <select class="kitchen#requirement" id="kitchenid" name="customer[kitchenreq]">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="2+">2+</option>
                </select>
            </div>
            <div class="bathroom#group">
                <label>Bathroom</label> 
                <select class="bathroom#requirement" id="bathroomid" name="customer[bathroomreq]"> 
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="3+">3+</option>
                </select>
            </div>
            <div class="prayerroom#group">
                <label>Prayer Room <input type="checkbox" name="prayerroomreq"></label>
            </div>
            <div class="studyroom#group">
                <label>Study Room<input type="checkbox" name="studyroomreq"></label>
            </div> 
            <div class="diningroom#group">
                <label>Dining Room<input type="checkbox"name="diningroomreq"></label>
            </div>
            
            <div class="workarea#group">
                    <label>Work Area<input type="checkbox" name="workareareq"> </label>
                </div>
                <div class="utilityroom#group">
                    <label>Utility Room<input type="checkbox" name="utilityroomreq"> </label>
                </div>
                <div class="carporch#group">
                    <label>Car Porch<input type="checkbox" name="carporchreq"></label>
                </div>
                <div class="additional#group">
                    <label>Additional Discription</label>
                    <!-- TEXT AREA EDIT NEEDED IN FORMAT -->
                    <textarea class="additional#requirement" name="additionalreq"  width="10" rows="5"></textarea>
                </div>
                <div class="formbutton">
                    <input type="button" value="Submit" id="form-submit-button">

                </div>
           </form>
        </div>
        
    </section>
                   
    