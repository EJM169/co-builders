<% include ./partials/customerHeader %>
<section id="Profile" class="profile_area">
    <div class="container">
        <div class="profile_header">
            <h3><a href="/customer/<%=currentUser._id%>/profile/edit"><i class="fas fa-edit"></i></a>Profile</h3>
        </div>
        <div class=" card profile_content">
                <div class="card-body  row profile_details align-items-center">
                    <div class="col-lg-4 .d-none d-lg-block">
                        <div class="profile_image">
                            <img src="/img/default-user.jpg"  alt="Profile image">
                        </div>
                        <div class="profile_name">
                            <p>Name:<%= currentUser.username ;%></p>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="profile_information">
                            <h4>Information</h4>
                            <p>Email:<%= currentUser.email ;%></p>
                            <p>Contact No.:<%= currentUser.mobile ;%></p> 
                            <p>Date of Joining:<%= currentUser.dateOfJoin.toDateString() ;%></p>       
                            <% if(currentUser.location){ %>
                                <p>Location of Construction site:<%= currentUser.location; %></p>    
                            <%} %>
                            <% if(currentUser.budget){ %>
                                <p>Budget range:<%= currentUser.budget; %></p>    
                            <%} %>
                            <% if(currentUser.area){ %>
                                <p>Total area:<%= currentUser.area; %></p>    
                            <%} %>
                            <% if(currentUser.requirements){ %>
                                <p>Requirement Details:<%= currentUser.requirements; %></p>    
                            <%} %>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>

