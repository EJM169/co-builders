<% include ./partials/contractorHeader %>

<section id="edit_profile" class="edit_area">
    <div class="container">
        <div class="edit_header">
            <h3><i class="fas fa-user-edit"></i> Edit Profile</h3>
        </div>
        <div class="updation-form">
            <form action="/contractor/<%=currentUser._id%>/profile?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Email </label>
                    <input type="email" class="form-control" name="contractor[email]" value="<%=currentUser.email%>" >
                </div>
                <div class="form-group">
                    <label>Mobile </label>
                    <input type="tel" class="form-control" name="contractor[mobile]" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" value="<%=currentUser.mobile%>" maxlength="10">
                </div>
                <div class="form-group">
                    <label>Contractor Id </label>
                    <input type="text" class="form-control" minlength="4" name="contracotr[conid]" placeholder="Contractor id" required="required" value="<%=currentUser.contractorid%>">
                </div>
                <div class="form-group">
                    <label>Number of years of experience </label>
                    <input type="number" class="form-control" name="contractor[experience]" required="required" value="<%=currentUser.experience%>">
                </div>
                <div class="form-group">
                    <label>Minimum Budget </label>
                    <input type="number" class="form-control" name="contractor[budget]" required="required" value="<%=currentUser.budget%>">
                </div>
                <div class="form-group">
                    <label>Number of Projects worked on</label>
                    <input type="number" class="form-control" name="contractor[no_project]" required="required" value="<%=currentUser.no_project%>">
                </div>
                <div class="form-group">
                    <label>Office Address</label>
                       <textarea class="form-control" name="contractor[address]" rows="5" minlength="20" maxlength="1000"  ><%= currentUser.address %></textarea>
                </div>
