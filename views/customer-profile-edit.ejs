<% include ./partials/customerHeader %>

<section id="edit_profile" class="edit_area">
    <div class="container">
        <div class="edit_header">
            <h3><i class="fas fa-user-edit"></i> Edit Profile</h3>
        </div>
        <div class="updation-form">
            <form action="/customer/profile/edit" method="post">
                <div class="form-group">
                    <label>Name </label>
                    <input type="text" class="form-control" name="username" pattern="[A-Za-z]{3,30}"  placeholder="Enter your Name" maxlength="30" required="required">
                </div>
                <div class="form-group">
                    <label>Email </label>
                    <input type="email" class="form-control" name="email" placeholder="Enter your new email" required="required" >
                </div>
                <div class="form-group">
                    <label>Mobile </label>
                    <input type="tel" class="form-control" name="mobile" pattern="[1-9]{3}[0-9]{3}[0-9]{4}" placeholder="Enter your Mobile No." maxlength="10" required="required">
                </div>
                <div class="form-group">
                    <label>New Password </label>
                    <input type="password" class="form-control" id="cust_pass1" name="password" minlength="8" maxlength="30" placeholder="Enter your new Password" required="required">
                </div>
                <div class="form-group">
                    <label>Re-Enter New Password </label>
                    <input type="password" class="form-control" id="cust_pass2" name="repassword" minlength="8" maxlength="30" placeholder="Re-Enter your new Password" required="required">
                </div>
                <p id="pass_match1"> Password doesn't match</p>
                <div class="form-group">
                    <label>Give a description about your project</label>
                    <textarea class="form-control" id="cust_requirements" name="requirements" rows="5" minlength="20" maxlength="50" required="required"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">Update</button>
                </div>
            </form>
        </div>
    </div>
</section>

