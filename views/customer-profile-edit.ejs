<% include ./partials/customerHeader %>

<section id="edit_profile" class="edit_area">
    <div class="container">
        <div class="edit_header">
            <h3><i class="fas fa-user-edit"></i> Edit Profile</h3>
        </div>
        <div class="updation-form">
            <form action="/customer/<%=currentUser._id%>/profile?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Email </label>
                    <input type="email" class="form-control" name="customer[email]" value="<%=currentUser.email%>" >
                </div>
                <div class="form-group">
                    <label>Mobile </label>
                    <input type="tel" class="form-control" name="customer[mobile]" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" value="<%=currentUser.mobile%>" maxlength="10">
                </div>
                <div class="form-group">
                    <label>Location of construction site</label>
                       <textarea class="form-control" name="customer[location]" rows="5" minlength="20" maxlength="1000"  ><%= currentUser.location %></textarea>
                </div>
                   
                <div class="form-row align-items-center">
                     <div class="col-auto my-1">
                    <label  for="inlineFormCustomSelect">Budget for the construction</label>
                    
                    <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="customer[budget]" size="3">
                        <option value="5,00,000 to 10,00,000" n>5,00,000 to 10,00,000</option>
                        <option value="10,00,000 to 20,00,000">10,00,000 to 20,00,000</option>
                        <option value="20,00,000 to 30,00,000">20,00,000 to 30,00,000</option>
                        <option value="30,00,000+">30,00,000+</option>
                    </select>
                    </div>
                </div>
                <div class="form-group">
                    <label>Total Area in square feets</label>
                    <input type="text" class="form-control" name="customer[area]" value="<%=currentUser.area%>">
                </div>
                  <!-- <div class="form-group">
                    <label>New Password </label>
                    <input type="password" class="form-control" id="cust_pass1" name="customer[password]" minlength="8" maxlength="30" placeholder="Enter your new Password" required="required">
                </div>
                <div class="form-group">
                    <label>Re-Enter New Password </label>
                    <input type="password" class="form-control" id="cust_pass2" name="repassword" minlength="8" maxlength="30" placeholder="Re-Enter your new Password" required="required">
                </div>
                <p id="pass_match1"> Password doesn't match</p> -->
                <div class="form-group">
                    <label>Give a description about your project</label>
                    <textarea class="form-control" name="customer[requirements]" rows="5" minlength="20" maxlength="100"  ><%= currentUser.requirements %></textarea>
                </div>
                <div class="form-row align-items-center">
                    <div class="col-auto my-1">
                   <label  for="inlineFormCustomSelect">Requirements</label>
                   
                   <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="customer[reqselect]" size="3">
                       <option value="1-BHK" >1-BHK</option>
                       <option value="2-BHK">2-BHK</option>
                       <option value="3-BHK">3-BHK</option>
                   </select>
                   </div>
               </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">Update</button>
                </div>
            </form>
        </div>
    </div>
</section>

