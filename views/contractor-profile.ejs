<% include ./partials/contractorHeader %>
<section id="Profile" class="profile_area">
    <div class="container">
        <div class="profile_header">
            <h3><a href="/contractor/<%=currentUser._id%>/profile/edit"><i class="fas fa-edit"></i></a>Profile</h3>
        </div>
        <div class=" card profile_content">
                <div class="card-body  row profile_details align-items-center">
                    <div class="col-lg-4 .d-none d-lg-block">
                        <div class="profile_image">
                            <img src="/img/default-user.jpg"  alt="Profile image">
                        </div>
                        <div class="profile_name">
                            <p>Name:<%= currentUser.username ;%></p>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="profile_information">
                            <h4>Information</h4>
                            <p>Email:<%= currentUser.email ;%></p>
                            <p>Contractor Id:<%=currentUser.contractorid%></p>
                            <p>Contact No.:<%= currentUser.mobile ;%></p>    
                            <p>Number of years of experience:<%= currentUser.experience ;%></p>    
                            <% if(currentUser.criteria){ %>
                                <p>Criteria Details:<%= currentUser.criteria; %></p>    
                            <%} %>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>

<% include ./partials/footer %>
